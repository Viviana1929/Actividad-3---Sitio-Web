        child: Column(
          children: [
            ListView.builder(
              shrinkWrap: true,
              itemCount: 5, // NÃºmero de productos en el carrito
              itemBuilder: (context, index) {
                return ListTile(
                  leading: Image.asset('assets/product_image.jpg'),
